<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_height="fill_parent"
    android:layout_width="fill_parent" android:background="#ffffff">

    <TextView
        android:id="@+id/TextView01"
        android:layout_width="386dp"
        android:layout_height="wrap_content"
        android:layout_margin="5dip"
        android:fontFamily="@font/luckiest_guy"
        android:text="Shopping Cart"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="24dip"></TextView>

    <TextView
        android:id="@+id/textView1"
        android:layout_width="398dp"
        android:layout_height="wrap_content"
        android:layout_margin="5dip"
        android:fontFamily="cursive"
        android:text="Click on a product to edit the quantity"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="16sp"></TextView>

    <TextView
        android:id="@+id/TextViewSubtotal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dip"
        android:fontFamily="@font/andika"
        android:text="Subtotal"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold"></TextView>

    <ListView
        android:id="@+id/ListViewCatalog"
        android:layout_width="match_parent"
        android:layout_height="462dp"
        android:layout_weight="1"
        android:background="#ffffff"
        android:cacheColorHint="#ffffff"
        android:choiceMode="multipleChoice"
        android:clickable="true">

    </ListView>

    <LinearLayout android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:orientation="horizontal"
        android:layout_margin="5dip"
        android:id="@+id/LinearLayoutCheckout" android:layout_gravity="right">

        <Button
            android:id="@+id/ButtonRemoveFromCart"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/luckiest_guy"
            android:text="Remove from Cart"
            android:textColor="@color/black"
            app:backgroundTint="?attr/colorTertiaryFixedDim"></Button>

        <Button
            android:id="@+id/Button02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/luckiest_guy"
            android:onClick="openCheckout"
            android:text="Proceed to Checkout"
            android:textColor="@color/black"
            app:backgroundTint="?attr/colorTertiaryFixedDim"></Button>
    </LinearLayout>


</LinearLayout>
